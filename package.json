{
    "name": "build",
    "version": "0.0.0",
    "description": "build-add-in",
    "private": true,
    "engines": {
        "node": ">=20.0",
        "npm": ">=10.0"
    },
    "scripts": {
        "build": "npm run clean && npm run style-check && npm run spell-check && npm run lint && npm run compile",
        "clean": "node ./scripts/clean.js dist",
        "compile": "webpack --config ./config/webpack.config.js --mode production",
        "analyze": "npm run compile -- --env analyze=true",
        "server": "npx http-server %CD%/dist --ssl --cert %USERPROFILE%\\.office-addin-dev-certs\\localhost.crt --key %USERPROFILE%\\.office-addin-dev-certs\\localhost.key -c-1 --cors -p 3000",
        "localhost-certificates": "npx office-addin-dev-certs",
        "localhost-certificates-install": "npx office-addin-dev-certs install",
        "localhost-certificates-install-i-am-admin": "npx office-addin-dev-certs install --machine",
        "localhost-certificates-verify": "npx office-addin-dev-certs verify",
        "start": "webpack serve --config ./config/webpack.config.js --mode development",
        "style": "prettier --config ./config/prettier.json  --write \"@(src|tests|scripts)/**/*.@(ts|tsx|js|md|html|css|json)\"",
        "style-check": "prettier --config ./config/prettier.json  --check \"@(src|tests|scripts)/**/*.@(ts|tsx|js|md|html|css|json)\"",
        "spell-check": "cspell --config ./.vscode/cspell.json --gitignore \"@(src|tests|scripts)/**/*.@(ts|tsx|js|md|html|css|json)\"",
        "lint": "eslint --config ./config/eslint.mjs -- \"@(src|tests|scripts)/**/*.@(ts|tsx|js)\"",
        "lint-fix": "eslint --config ./config/eslint.mjs --fix \"@(src|tests|scripts)/**/*.@(ts|tsx|js)\"",
        "test": "npm run compile && set TEST_MODE=dist && npm run playwright-test",
        "crop": ".\\listing\\crop.cmd",
        "icon": "npm run icon-copy && npm run icon-generate",
        "icon-copy": "node ./scripts/get-icons.js",
        "icon-generate": ".\\assets\\generate.cmd",
        "share": "node ./scripts/manifests-to-share.js",
        "manifest": "node ./scripts/make-manifest.js && npm run share && npm run check-manifests",
        "make-manifest": "node ./scripts/make-manifest.js",
        "check-manifests": "npm run check-manifest-local && npm run check-manifest && npm run check-manifest-outlook-local && npm run check-manifest-outlook",
        "check-manifest": "npx office-addin-manifest validate --production manifests/production.xml",
        "check-manifest-local": "npx office-addin-manifest validate manifests/local.xml",
        "check-manifest-outlook": "npx office-addin-manifest validate --production manifests/production.outlook.xml ",
        "check-manifest-outlook-local": "npx office-addin-manifest validate manifests/local.outlook.xml",
        "deploy-git-hooks": "node ./scripts/deploy-git-hooks.js --install",
        "remove-git-hooks": "node ./scripts/deploy-git-hooks.js --remove",
        "extract-loc": "node ./scripts/extract-loc.js",
        "embed-loc": "node ./scripts/embed-loc.js",
        "playwright-install": "playwright install --with-deps chromium",
        "playwright-test": "playwright test --config ./config/playwright.config.ts",
        "playwright-report": "playwright show-report"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wandyezj/website.git"
    },
    "author": "wandyezj",
    "license": "Unlicense",
    "bugs": {
        "url": "https://github.com/wandyezj/website/issues"
    },
    "homepage": "https://github.com/wandyezj/website#readme",
    "dependencies": {
        "@fluentui/react-components": "^9.68.3",
        "@fluentui/react-icons": "^2.0.307",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "typescript": "^5.9.2",
        "yaml": "^2.6.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.54.2",
        "@types/node": "^18.7.17",
        "@types/office-js": "^1.0.376",
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.3.7",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.40.0",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^13.0.1",
        "cspell": "8.15.4",
        "css-loader": "^7.1.2",
        "eslint": "^9.33.0",
        "html-webpack-plugin": "^5.6.4",
        "marked": "^12.0.0",
        "monaco-editor-webpack-plugin": "^7.1.0",
        "office-addin-dev-certs": "^2.0.3",
        "playwright": "^1.54.2",
        "prettier": "^3.6.2",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.2",
        "webpack": "^5.100.0",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2"
    }
}
